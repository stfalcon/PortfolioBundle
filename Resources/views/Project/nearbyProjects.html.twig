<div class="next-prev-projects">
    <div class="next">
        {% if nextProject %}
            <a href="{{ path('portfolio_project_view', { 'categorySlug': category.slug, 'projectSlug': nextProject.slug, '_locale': app.request.locale }) }}">
                {{ "Следующий проект"|trans }} →
            </a>
            <br />
            {{ nextProject.name }}
        {% else %}
            {{ "Следующий проект"|trans }} →
        {% endif %}
    </div>

    <div class="prev">
        {% if previousProject %}
            <a href="{{ path('portfolio_project_view', { 'categorySlug': category.slug, 'projectSlug': previousProject.slug, '_locale': app.request.locale }) }}">
                ← {{ "Предыдущий проект"|trans }}
            </a>
            <br />
            {{ previousProject.name }}
        {% else %}
            ← {{ "Предыдущий проект"|trans }}
        {% endif %}
    </div>
</div>