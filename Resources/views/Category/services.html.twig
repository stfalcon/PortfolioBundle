<h2>
    {% trans %}Услуги{% endtrans %}
</h2>

<div id="accordion" class="servises">
    {% for category in categories %}
        {% if category.projects.count %}
            <h3>{{ category.name }}</h3>
            <ul>
            {% for project in category.projects %}
                {% if currentProject.id is defined and currentProject.id == project.id
                   and currentCategory.id is defined and currentCategory.id == category.id %}
                    <li class="active {category_index:{{ loop.parent.loop.index0 }} }">
                        {{ project.name }}
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('portfolio_project_view', {'categorySlug': category.slug, 'projectSlug': project.slug, '_locale': app.request.locale }) }}">
                            {{ project.name }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
            </ul>
        {% endif %}
    {% endfor %}
    <div class="clear"></div>
</div>